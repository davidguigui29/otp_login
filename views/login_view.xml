<odoo>

    <template id="custom_login_otp_checkbox_template" inherit_id="web.login">
        <xpath expr="//input[@name='password']" position="after">
            <div class="o_login_otp_container">
                <div style="margin-top:10px; display:flex;">
                    <a t-attf-href="?otp_login=true" class="btn btn-link" role="button">
                        Login with OTP
                    </a>
                </div>
                <div class="form-check mb-3">
                    <input type="checkbox" class="form-check-input show-password-checkbox" />
                    <label class="form-check-label">Show password</label>
                </div>
            </div>
        </xpath>
        <xpath expr="//form[@role='form' and @method='post']" position="attributes">
            <attribute name="t-if">not otp_login</attribute>
        </xpath>
    </template>

    <template id="custom_login_template" inherit_id="web.login">
        <xpath expr="//form[@role='form' and @method='post']" position="after">
            <form t-if="otp_login and not otp" id="form_otp_login" class="oe_login_form" role="form"
                t-attf-action="/web/otp/login" method="post">
                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()" />
                <div class="form-group field-login">
                    <label t-attf-style="margin-bottom:10px" for="login">Email</label>
                    <input type="text" placeholder="Email" name="login" t-att-value="login"
                        id="login"
                        t-attf-class="form-control #{'form-control-sm' if form_small else ''}"
                        required="required"
                        autofocus="autofocus" autocapitalize="off" />
                </div>
                <label for="password" class="form-label d-flex justify-content-between d-none">
                    Password</label>
                <input type="password" placeholder="Password" name="password" id="password"
                    class="form-control d-none" autocomplete="current-password"
                    t-att-autofocus="'autofocus' if login else None" maxlength="4096" />
                <p t-if="login_error" class="alert alert-danger" role="alert">
                    The Email entered is incorrect.
                </p>
                <div
                    t-attf-class="clearfix oe_login_buttons text-center mb-1 {{'pt-2' if form_small else 'pt-3'}}">
                    <button style="width:100%" type="submit" class="btn btn-primary btn-block">Send
                        OTP</button>
                </div>
                <div style="margin-top:10px; display:flex;">
                    <a t-attf-href="/web/login" class="btn btn-link" role="button">
                        Login with Password
                    </a>
                </div>
            </form>
            <form t-if="otp" id="form_otp" class="oe_login_form" role="form"
                t-attf-action="/web/otp/verify"
                method="post">
                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()" />
                <div class="form-group">
                    <label t-attf-style="margin-bottom:10px" for="otp">OTP</label>
                    <input type="text" placeholder="OTP" name="otp" id="otp"
                        t-attf-class="form-control #{'is-invalid' if otp_error else ''} #{'form-control-sm' if form_small else ''}"
                        required="required" />
                    <input type="hidden" id="otp_login_hidden" name="login" t-att-value="login" />

                </div>

                <p t-if="otp_error" class="alert alert-danger mt-2" role="alert">
                    The OTP you entered is invalid. Please try again.
                </p>

                <div class="text-center mt-2">
                    <button id="resend_otp_btn" type="button" class="btn btn-link"> Resend OTP (<span
                            id="countdown">30</span>s) </button>
                </div>

                <div
                    t-attf-class="clearfix oe_login_buttons text-center mb-1 {{'pt-2' if form_small else 'pt-3'}}">
                    <button style="width:100%" type="submit" class="btn btn-primary btn-block">Verify
                        OTP</button>
                </div>
            </form>
        </xpath>
    </template>

</odoo>


